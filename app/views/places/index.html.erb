
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
        <%= image_tag 'slider1.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Find food and enjoy.
      </div>
    </div>
    <div class="item">
        <%= image_tag 'slider2.png', :class => 'img-responsive' %>
      <div class="carousel-caption">
      	Yum
      	</div>
      </div>
      <div class="item">
        <%= image_tag 'slider3.png', :class => 'img-responsive' %>
      <div class="carousel-caption">
      	Yum
      	</div>
      </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1><br />
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p>
		
		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>
	<% if place.comments.last.present? %>
    <div class="col-xs-12">
			<blockquote>
			<% if place.comments.last.humanized_rating.present? %>
				<b>Rating:</b>  <%=	place.comments.last.humanized_rating  %> <br /> - 
				 <% end %>
				    <%= place.comments.last.message %>
	 			<small><%=     place.comments.last.user.email   %> </small>
			</blockquote>
		</div>
	<% end %>
	</div>
<% end %>
<br />

<div class="row">
	<div class="paginate col-md-3 col-xs-3 col-md-offset-8 col-xs-offset-8">
		<h4><span class="prev disabled"><%= raw(t 'views.pagination.previous') %></span>
				<%= paginate @places %></h4>
		</div>
</div>



